FROM node:18
ARG DB_HOST
ARG DB_USER
ARG DB_NAME
ARG DB_PORT
ARG DB_PASSWORD
WORKDIR /app
COPY package*.json /app
RUN npm install
COPY . /app
ENV DB_HOST=${DB_HOST}
ENV DB_NAME=${DB_NAME}
ENV DB_PORT=${DB_PORT}
ENV DB_USER=${DB_USER}
ENV DB_PASSWORD=${DB_PASSWORD}
ENV PORT=3000
EXPOSE 3000
CMD ["node", "src/index.js"]